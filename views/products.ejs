    <style>
        /* Reused Dashboard Layout */
        .dashboard-section {
            padding-top: 120px;
            padding-bottom: 60px;
            min-height: 100vh;
            background-color: #0e0e0e;
            color: white;
        }
        
        .dashboard-grid {
            display: grid;
            grid-template-columns: 250px 1fr;
            gap: 40px;
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .sidebar-menu {
            border-right: 1px solid rgba(255,255,255,0.1);
            padding-right: 20px;
        }

        .sidebar-item {
            display: block;
            padding: 15px 0;
            color: #888;
            text-decoration: none;
            font-family: 'Oswald', sans-serif;
            text-transform: uppercase;
            font-size: 16px;
            transition: color 0.3s;
            border-bottom: 1px solid rgba(255,255,255,0.05);
        }

        .sidebar-item:hover, .sidebar-item.active { color: #fff; }

        /* Product Table Styles */
        .product-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 30px;
            font-family: 'Montserrat', sans-serif;
        }

        .product-table th {
            text-align: left;
            padding: 15px;
            border-bottom: 2px solid #fff;
            font-family: 'Oswald', sans-serif;
            text-transform: uppercase;
            color: #888;
            font-size: 14px;
        }

        .product-table td {
            padding: 15px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            color: #fff;
            font-size: 14px;
        }

        .product-row:hover { background-color: rgba(255,255,255,0.05); }

        .status-badge {
            padding: 5px 10px;
            border-radius: 4px;
            font-size: 11px;
            text-transform: uppercase;
            font-weight: 600;
        }
        .status-instock { background: rgba(77, 255, 136, 0.1); color: #4dff88; }
        .status-lowstock { background: rgba(255, 170, 77, 0.1); color: #ffaa4d; }
        .status-outstock { background: rgba(255, 77, 77, 0.1); color: #ff4d4d; }

        /* Modal/Popup Styles */
        .modal-overlay {
            display: none;
            position: fixed;
            top: 0; left: 0; width: 100%; height: 100%;
            background: rgba(0,0,0,0.8);
            z-index: 9999;
            justify-content: center;
            align-items: center;
            backdrop-filter: blur(5px);
        }

        .modal-box {
            background: #1a1a1a;
            padding: 40px;
            width: 100%;
            max-width: 500px;
            border: 1px solid rgba(255,255,255,0.1);
            position: relative;
        }

        .close-modal {
            position: absolute;
            top: 20px; right: 20px;
            color: #fff;
            cursor: pointer;
            font-family: 'Oswald', sans-serif;
        }

        .form-group { margin-bottom: 20px; }
        
        .form-label {
            display: block;
            color: #888;
            margin-bottom: 8px;
            font-family: 'Oswald', sans-serif;
            text-transform: uppercase;
            font-size: 12px;
        }

        .form-input {
            width: 100%;
            padding: 12px;
            background: #0e0e0e;
            border: 1px solid rgba(255,255,255,0.1);
            color: white;
            font-family: 'Montserrat', sans-serif;
        }

        .form-input:focus { outline: none; border-color: #fff; }

        .create-btn {
            display: inline-block;
            padding: 12px 30px;
            background: white;
            color: black;
            text-transform: uppercase;
            font-family: 'Oswald', sans-serif;
            font-size: 14px;
            text-decoration: none;
            border: none;
            cursor: pointer;
            transition: all 0.3s;
        }
        .create-btn:hover { background: #ccc; }

        .w-webflow-badge { display: none !important; } 
    </style>

    <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js" defer ></script>
