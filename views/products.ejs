<!DOCTYPE html>
<html data-wf-domain="www.soscalemedia.se" lang="en">
<head>
    <meta charset="utf-8"/>
    <title>StockMaster | Products</title>
    <meta content="Manage your inventory products" name="description"/>
    <meta content="width=device-width, initial-scale=1" name="viewport"/>
    
    <link href="https://cdn.prod.website-files.com/67a323a1c68594827fa0cca9/css/soscale-39349c-c66c87b5666753b1b89d5bc1.webflow.shared.1aa2f82cd.css" rel="stylesheet" type="text/css"/>
    <link href="https://fonts.googleapis.com" rel="preconnect"/>
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin="anonymous"/>
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js" type="text/javascript"></script>
    <script type="text/javascript">WebFont.load({ google: { families: ["Montserrat:100,100italic,200,200italic,300,300italic,400,400italic,500,500italic,600,600italic,700,700italic,800,800italic,900,900italic","Oswald:200,300,400,500,600,700"] }});</script>
    
    <style>
        /* Layout CSS */
        .dashboard-section { padding-top: 120px; padding-bottom: 60px; min-height: 100vh; background-color: #0e0e0e; color: white; }
        .dashboard-grid { display: grid; grid-template-columns: 250px 1fr; gap: 40px; max-width: 1400px; margin: 0 auto; padding: 0 20px; }
        
        /* Sidebar */
        .sidebar-menu { border-right: 1px solid rgba(255,255,255,0.1); padding-right: 20px; }
        .sidebar-item { display: block; padding: 15px 0; color: #888; text-decoration: none; font-family: 'Oswald', sans-serif; text-transform: uppercase; font-size: 16px; transition: color 0.3s; border-bottom: 1px solid rgba(255,255,255,0.05); }
        .sidebar-item:hover, .sidebar-item.active { color: #fff; }

        /* Table */
        .product-table { width: 100%; border-collapse: collapse; margin-top: 30px; font-family: 'Montserrat', sans-serif; }
        .product-table th { text-align: left; padding: 15px; border-bottom: 2px solid #fff; font-family: 'Oswald', sans-serif; text-transform: uppercase; color: #888; font-size: 14px; }
        .product-table td { padding: 15px; border-bottom: 1px solid rgba(255,255,255,0.1); color: #fff; font-size: 14px; vertical-align: top; }
        .product-row:hover { background-color: rgba(255,255,255,0.05); }

        /* Badges & Forms */
        .status-badge { padding: 5px 10px; border-radius: 4px; font-size: 11px; text-transform: uppercase; font-weight: 600; }
        .status-instock { background: rgba(77, 255, 136, 0.1); color: #4dff88; }
        .status-lowstock { background: rgba(255, 170, 77, 0.1); color: #ffaa4d; }
        .status-outstock { background: rgba(255, 77, 77, 0.1); color: #ff4d4d; }

        .modal-overlay { display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); z-index: 9999; justify-content: center; align-items: center; backdrop-filter: blur(5px); }
        .modal-box { background: #1a1a1a; padding: 40px; width: 100%; max-width: 500px; border: 1px solid rgba(255,255,255,0.1); position: relative; }
        .close-modal { position: absolute; top: 20px; right: 20px; color: #fff; cursor: pointer; font-family: 'Oswald'; }
        
        .form-group { margin-bottom: 20px; }
        .form-label { display: block; color: #888; margin-bottom: 8px; font-family: 'Oswald'; text-transform: uppercase; font-size: 12px; }
        .form-input { width: 100%; padding: 12px; background: #0e0e0e; border: 1px solid rgba(255,255,255,0.1); color: white; font-family: 'Montserrat'; }
        .form-input:focus { outline: none; border-color: #fff; }
        
        .create-btn { display: inline-block; padding: 12px 30px; background: white; color: black; text-transform: uppercase; font-family: 'Oswald'; font-size: 14px; border: none; cursor: pointer; transition: all 0.3s; }
        .create-btn:hover { background: #ccc; }
        
        .w-webflow-badge { display: none !important; } 
    </style>

    <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js" defer ></script>
</head>

<body class="body">

    <nav class="hero-wrap">
        <a href="/" class="header-text-left _1 fixed-right-mob w-inline-block">
            <div class="letter-wrap black">STOCKMASTER</div>
        </a>

        <div class="header-text-left fixed-left">
            <div class="header-text-left fix-size">
                <a href="/home" class="menu-link-block w-inline-block"><div class="letter-wrap">Dashboard</div></a>
                <a href="/products" aria-current="page" class="menu-link-block w-inline-block w--current"><div class="letter-wrap">Products</div></a>
                <a href="/operations" class="menu-link-block w-inline-block"><div class="letter-wrap">Operations</div></a>
            </div>
            <div class="header-text-left fix-size">
                <a href="/warehouses/map" class="menu-link-block w-inline-block"><div class="letter-wrap">Warehouse</div></a>
                <a href="/settings" class="menu-link-block w-inline-block"><div class="letter-wrap">Settings</div></a>
            </div>
        </div>

        <div class="header-text-left fixed-center">
            <div class="hacker-text _1">Product Management</div>
        </div>

        <a href="/users/logout" class="header-text-left _1 fixed-right w-inline-block">
            <img src="https://cdn.prod.website-files.com/67a323a1c68594827fa0cca9/67a323a1c68594827fa0ccb4_Vector.svg" alt="" class="arrow-black"/>
            <div class="letter-wrap black">LOGOUT</div>
        </a>
    </nav>

    <section class="dashboard-section">
        <div class="dashboard-grid">
            
            <aside class="sidebar-menu">
                <div style="margin-bottom: 40px;">
                    <h3 class="form-label" style="color: white; margin-bottom: 20px;">Filters</h3>
                    <a href="#" class="sidebar-item active">All Products</a>
                    <a href="#" class="sidebar-item">Low Stock</a>
                    <a href="#" class="sidebar-item">Raw Materials</a>
                    <a href="#" class="sidebar-item">Finished Goods</a>
                </div>
                
                <button onclick="openModal()" class="create-btn" style="width: 100%;">+ New Product</button>
            </aside>

            <div class="main-content">
                
                <% if (success && success.length > 0) { %>
                    <div style="background: rgba(77, 255, 136, 0.1); color: #4dff88; padding: 15px; border: 1px solid #4dff88; margin-bottom: 20px; font-family: 'Oswald';"><%= success %></div>
                <% } %>

                <div style="display: flex; justify-content: space-between; align-items: flex-end;">
                    <h2 style="font-family: 'Oswald'; font-size: 32px; margin: 0;">Inventory List</h2>
                    <div class="form-label">Total Items: <%= products.length %></div>
                </div>

                <table class="product-table">
                    <thead>
                        <tr>
                            <th>SKU</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Unit</th>
                            <th>Stock by Location</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (products.length > 0) { %>
                            <% products.forEach(function(product) { %>
                                <tr class="product-row">
                                    <td style="font-family: 'Oswald'; letter-spacing: 1px;"><%= product.sku %></td>
                                    
                                    <td>
                                        <a href="/products/<%= product._id %>/history" style="color: white; text-decoration: underline;">
                                            <%= product.name %>
                                        </a>
                                    </td>
                                    
                                    <td><%= product.category %></td>
                                    <td><%= product.unitOfMeasure %></td>
                                    
                                    <td>
                                        <% if(product.stockByLocation && product.stockByLocation.length > 0) { %>
                                            <div style="font-size: 12px;">
                                                <% product.stockByLocation.forEach(function(loc) { %>
                                                    <% if(loc.quantity > 0 && loc.warehouse) { %>
                                                        <div style="display:flex; justify-content:space-between; width:160px; margin-bottom:2px;">
                                                            <span style="color:#888"><%= loc.warehouse.name %>:</span>
                                                            <span style="color:#fff; font-weight:bold;"><%= loc.quantity %></span>
                                                        </div>
                                                    <% } %>
                                                <% }); %>
                                            </div>
                                            <div style="border-top:1px solid #333; margin-top:4px; padding-top:4px; font-weight:bold; color:#4dff88;">
                                                Total: <%= product.totalStock %> <%= product.unitOfMeasure %>
                                            </div>
                                        <% } else { %>
                                            <span style="color: #666;">0.00</span>
                                        <% } %>
                                    </td>

                                    <td>
                                        <% if ((product.totalStock) <= 0) { %>
                                            <span class="status-badge status-outstock">Out of Stock</span>
                                        <% } else { %>
                                            <span class="status-badge status-instock">In Stock</span>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr><td colspan="6" style="text-align: center; padding: 40px; color: #888;">No products found. Click "+ New Product" to add one.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <div id="createModal" class="modal-overlay">
        <div class="modal-box">
            <div class="close-modal" onclick="closeModal()">âœ• CLOSE</div>
            <h2 style="font-family: 'Oswald'; font-size: 24px; margin-bottom: 30px; text-transform: uppercase;">Create New Product</h2>
            
            <form action="/products/create" method="POST">
                <div class="form-group">
                    <label class="form-label">Product Name</label>
                    <input type="text" name="name" class="form-input" placeholder="e.g. Steel Rods 10mm" required>
                </div>

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                    <div class="form-group">
                        <label class="form-label">SKU / Code</label>
                        <input type="text" name="sku" class="form-input" placeholder="e.g. SR-001" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Category</label>
                        <input type="text" name="category" class="form-input" placeholder="e.g. Raw Material" required>
                    </div>
                </div>

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                    <div class="form-group">
                        <label class="form-label">Unit of Measure</label>
                        <select name="unitOfMeasure" class="form-input" style="height: 45px;">
                            <option value="units">Units</option>
                            <option value="kg">Kilograms (kg)</option>
                            <option value="m">Meters (m)</option>
                            <option value="liters">Liters (l)</option>
                        </select>
                    </div>
                </div>

                <div style="background: rgba(255,255,255,0.05); padding: 15px; border-radius: 4px; margin-bottom: 20px;">
                    <h4 style="font-family: 'Oswald'; color: #888; margin: 0 0 10px 0; font-size: 12px;">OPENING STOCK (OPTIONAL)</h4>
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                        <div class="form-group" style="margin-bottom: 0;">
                            <label class="form-label">Quantity</label>
                            <input type="number" name="stock" class="form-input" placeholder="0" min="0">
                        </div>
                        <div class="form-group" style="margin-bottom: 0;">
                            <label class="form-label">Location</label>
                            <select name="initialWarehouse" class="form-input" style="height: 45px;">
                                <option value="" disabled selected>Select Warehouse</option>
                                <% if (typeof warehouses !== 'undefined') { %>
                                    <% warehouses.forEach(function(wh) { %>
                                        <option value="<%= wh._id %>"><%= wh.name %></option>
                                    <% }); %>
                                <% } %>
                            </select>
                        </div>
                    </div>
                </div>

                <button type="submit" class="create-btn" style="width: 100%;">Create Product</button>
            </form>
        </div>
    </div>

    <script>
        // Modal Logic
        const modal = document.getElementById('createModal');
        const modalBox = modal.querySelector('.modal-box');

        function openModal() {
            modal.style.display = 'flex';
            gsap.fromTo(modal, {opacity: 0}, {opacity: 1, duration: 0.3});
            gsap.fromTo(modalBox, {y: 50, opacity: 0}, {y: 0, opacity: 1, duration: 0.4, delay: 0.1});
        }

        function closeModal() {
            gsap.to(modal, {opacity: 0, duration: 0.3, onComplete: () => {
                modal.style.display = 'none';
            }});
        }

        modal.addEventListener('click', (e) => {
            if (e.target === modal) closeModal();
        });

        // Text Animation
        function letterWrap(el, cls) {
            const words = el.textContent.split(' ');
            const letters = [];
            cls = cls || 'letter-wrap'
            words.forEach(word => {
                let html = '';
                for (var letter in word) {
                    html += `<span class="${cls}__char"><span class="${cls}__char-inner" data-letter="${word[letter]}">${word[letter]}</span></span>`;
                };
                let wrappedWords = `<span class="${cls}__word">${html}</span>`;
                letters.push(wrappedWords);
            });
            return el.innerHTML = letters.join(' ');
        }

        const letterWrapElements = document.getElementsByClassName('letter-wrap');
        [...letterWrapElements].forEach(el => letterWrap(el, 'letter-wrap'));
    </script>
</body>
</html>