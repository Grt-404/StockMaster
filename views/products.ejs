    <section class="dashboard-section">
        <div class="dashboard-grid">
            
            <aside class="sidebar-menu">
                <div style="margin-bottom: 40px;">
                    <h3 class="form-label" style="color: white; margin-bottom: 20px;">Filters</h3>
                    <a href="#" class="sidebar-item active">All Products</a>
                    <a href="#" class="sidebar-item">Low Stock</a>
                    <a href="#" class="sidebar-item">Raw Materials</a>
                    <a href="#" class="sidebar-item">Finished Goods</a>
                </div>
                
                <button onclick="openModal()" class="create-btn" style="width: 100%;">
                    + New Product
                </button>
            </aside>

            <div class="main-content">
                
                <% if (success && success.length > 0) { %>
                    <div style="background: rgba(77, 255, 136, 0.1); color: #4dff88; padding: 15px; border: 1px solid #4dff88; margin-bottom: 20px; font-family: 'Oswald', sans-serif;">
                        <%= success %>
                    </div>
                <% } %>

                <div style="display: flex; justify-content: space-between; align-items: flex-end;">
                    <h2 style="font-family: 'Oswald', sans-serif; font-size: 32px; margin: 0;">Inventory List</h2>
                    <div class="form-label">Total Items: <%= products.length %></div>
                </div>

                <table class="product-table">
                    <thead>
                        <tr>
                            <th>SKU</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Unit</th>
                            <th>Stock On Hand</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (products.length > 0) { %>
                            <% products.forEach(function(product) { %>
                                <tr class="product-row">
                                    <td style="font-family: 'Oswald', sans-serif; letter-spacing: 1px;"><%= product.sku %></td>
                                    <td><%= product.name %></td>
                                    <td><%= product.category %></td>
                                    <td><%= product.unitOfMeasure %></td>
                                    <td><%= product.stock %></td>
                                    <td>
                                        <% if (product.stock <= 0) { %>
                                            <span class="status-badge status-outstock">Out of Stock</span>
                                        <% } else if (product.stock < 10) { %>
                                            <span class="status-badge status-lowstock">Low Stock</span>
                                        <% } else { %>
                                            <span class="status-badge status-instock">In Stock</span>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" style="text-align: center; padding: 40px; color: #888;">
                                    No products found. Click "+ New Product" to add one.
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <div id="createModal" class="modal-overlay">
        <div class="modal-box">
            <div class="close-modal" onclick="closeModal()">âœ• CLOSE</div>
            <h2 style="font-family: 'Oswald', sans-serif; font-size: 24px; margin-bottom: 30px; text-transform: uppercase;">Create New Product</h2>
            
            <form action="/products/create" method="POST">
                <div class="form-group">
                    <label class="form-label">Product Name</label>
                    <input type="text" name="name" class="form-input" placeholder="e.g. Steel Rods 10mm" required>
                </div>

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                    <div class="form-group">
                        <label class="form-label">SKU / Code</label>
                        <input type="text" name="sku" class="form-input" placeholder="e.g. SR-001" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Category</label>
                        <input type="text" name="category" class="form-input" placeholder="e.g. Raw Material" required>
                    </div>
                </div>

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                    <div class="form-group">
                        <label class="form-label">Unit of Measure</label>
                        <select name="unitOfMeasure" class="form-input" style="height: 45px;">
                            <option value="units">Units</option>
                            <option value="kg">Kilograms (kg)</option>
                            <option value="m">Meters (m)</option>
                            <option value="liters">Liters (l)</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Initial Stock</label>
                        <input type="number" name="stock" class="form-input" placeholder="0" min="0">
                    </div>
                </div>

                <button type="submit" class="create-btn" style="width: 100%; margin-top: 10px;">Create Product</button>
            </form>
        </div>
    </div>

    <script>
        // Modal Logic
        const modal = document.getElementById('createModal');
        const modalBox = modal.querySelector('.modal-box');

        function openModal() {
            modal.style.display = 'flex';
            // Simple entrance animation
            gsap.fromTo(modal, {opacity: 0}, {opacity: 1, duration: 0.3});
            gsap.fromTo(modalBox, {y: 50, opacity: 0}, {y: 0, opacity: 1, duration: 0.4, delay: 0.1});
        }

        function closeModal() {
            gsap.to(modal, {opacity: 0, duration: 0.3, onComplete: () => {
                modal.style.display = 'none';
            }});
        }

        // Close on outside click
        modal.addEventListener('click', (e) => {
            if (e.target === modal) closeModal();
        });

        // Text Animation from template
        // (Keeping the same script logic as dashboard/home for consistency)
        function letterWrap(el, cls) {
            const words = el.textContent.split(' ');
            const letters = [];
            cls = cls || 'letter-wrap'
            words.forEach(word => {
                let html = '';
                for (var letter in word) {
                    html += `<span class="${cls}__char"><span class="${cls}__char-inner" data-letter="${word[letter]}">${word[letter]}</span></span>`;
                };
                let wrappedWords = `<span class="${cls}__word">${html}</span>`;
                letters.push(wrappedWords);
            });
            return el.innerHTML = letters.join(' ');
        }

        const letterWrapElements = document.getElementsByClassName('letter-wrap');
        [...letterWrapElements].forEach(el => letterWrap(el, 'letter-wrap'));
    </script>
</body>
