<!DOCTYPE html>
<html data-wf-domain="www.stockmaster.app" lang="en">
<head>
    <meta charset="utf-8"/>
    <title>StockMaster | Products</title>
    <meta content="Manage your inventory products" name="description"/>
    <meta content="width=device-width, initial-scale=1" name="viewport"/>
    
    <link href="https://cdn.prod.website-files.com/67a323a1c68594827fa0cca9/css/soscale-39349c-c66c87b5666753b1b89d5bc1.webflow.shared.1aa2f82cd.css" rel="stylesheet" type="text/css"/>
    <link href="https://fonts.googleapis.com" rel="preconnect"/>
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin="anonymous"/>
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js" type="text/javascript"></script>
    <script type="text/javascript">WebFont.load({  google: {    families: ["Montserrat:100,100italic,200,200italic,300,300italic,400,400italic,500,500italic,600,600italic,700,700italic,800,800italic,900,900italic","Oswald:200,300,400,500,600,700"]  }});</script>
    
    <link href="https://cdn.jsdelivr.net/npm/splitting@1.0.6/dist/splitting.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js" defer ></script>
    <script src="https://cdn.jsdelivr.net/gh/studio-freight/lenis@1.0.23/bundled/lenis.min.js"></script>

    <style>
        /* --- Shared Dashboard Styles --- */
        body { background-color: #0e0e0e; color: #edf2f4; font-family: 'Montserrat', sans-serif; margin: 0; }
        .w-webflow-badge { display: none !important; } 
        html.lenis { height: auto; }
        .lenis.lenis-smooth { scroll-behavior: auto; }

        /* Letter Wrap Animation */
        .letter-wrap { display: inline-block; position: relative; } 
        .letter-wrap * { pointer-events: none; } 
        .letter-wrap__word { display: inline-flex; position: relative; overflow: hidden; } 
        .letter-wrap__char { display: inline-block; position: relative; text-transform: uppercase; } 
        .letter-wrap__char-inner { display: inline-block; } 
        .letter-wrap__char-inner:after { content: attr(data-letter); position: absolute; top: 100%; left: 0; }

        /* Layout */
        .dashboard-section { 
            padding-top: 160px; 
            padding-bottom: 100px; 
            min-height: 100vh; 
            background-color: #0e0e0e; 
            color: #edf2f4; 
            position: relative;
            z-index: 2;
            background-image: radial-gradient(circle at 50% 50%, #1a1a1a 0%, #0e0e0e 100%);
        }

        .dashboard-container {
            max-width: 1400px;
            width: 95vw;
            margin: 40px auto 0;
            display: grid;
            grid-template-columns: 240px 1fr;
            gap: 40px;
        }

        /* Header */
        .dashboard-nav {
            position: fixed;
            top: 0; left: 0; right: 0;
            height: 90px;
            padding: 0 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: rgba(14, 14, 14, 0.7);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.08);
            z-index: 1000;
            transition: all 0.3s ease;
        }
        .nav-left { display: flex; align-items: center; gap: 30px; }
        .nav-logo-text {
            font-family: 'Oswald', sans-serif;
            font-size: 24px;
            color: #fff;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 500;
            text-decoration: none;
        }
        .nav-center {
            display: flex;
            gap: 10px;
            background: rgba(255, 255, 255, 0.03);
            padding: 5px;
            border-radius: 50px;
            border: 1px solid rgba(255, 255, 255, 0.05);
        }
        .nav-pill {
            padding: 8px 20px;
            border-radius: 20px;
            color: #888;
            text-decoration: none;
            font-family: 'Montserrat', sans-serif;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        .nav-pill:hover { color: #fff; background: rgba(255, 255, 255, 0.1); }
        .nav-pill.active { color: #000; background: #fff; font-weight: 600; }
        
        .nav-right { display: flex; align-items: center; gap: 20px; }
        .user-status { display: flex; align-items: center; gap: 8px; font-family: 'Oswald', sans-serif; font-size: 14px; color: #fff; }
        .status-dot { width: 8px; height: 8px; background: #4dff88; border-radius: 50%; box-shadow: 0 0 8px #4dff88; animation: pulse 2s infinite; }
        .logout-btn {
            display: flex; align-items: center; gap: 8px; padding: 8px 16px;
            border: 1px solid rgba(255,255,255,0.2); border-radius: 4px;
            color: #fff; text-decoration: none; font-family: 'Oswald', sans-serif;
            text-transform: uppercase; font-size: 12px; transition: all 0.3s;
        }
        .logout-btn:hover { background: #fff; color: #000; border-color: #fff; }

        /* Ticker */
        .ticker-wrapper {
            position: fixed;
            top: 90px;
            width: 100%;
            background: rgba(0,0,0,0.8);
            border-bottom: 1px solid rgba(255,255,255,0.05);
            overflow: hidden;
            white-space: nowrap;
            z-index: 5;
            padding: 6px 0;
        }
        .ticker-text {
            display: inline-block;
            font-family: 'Montserrat', sans-serif;
            font-size: 10px;
            text-transform: uppercase;
            color: #4dff88;
            letter-spacing: 1px;
            animation: ticker 40s linear infinite;
        }
        @keyframes ticker { 0% { transform: translateX(0); } 100% { transform: translateX(-50%); } }

        /* Sidebar & Forms */
        .sidebar-menu { border-right: 1px solid rgba(255,255,255,0.1); padding-right: 20px; }
        .sidebar-header {
            font-family: 'Montserrat', sans-serif;
            font-size: 10px;
            text-transform: uppercase;
            letter-spacing: 2px;
            color: #666;
            margin-bottom: 15px;
            margin-top: 30px;
        }
        
        .form-group { margin-bottom: 20px; }
        .form-label { display: block; color: #888; margin-bottom: 8px; font-family: 'Oswald', sans-serif; text-transform: uppercase; font-size: 12px; letter-spacing: 1px; }
        .form-input { 
            width: 100%; 
            padding: 12px; 
            background: #121212; 
            border: 1px solid rgba(255,255,255,0.1); 
            color: white; 
            font-family: 'Montserrat', sans-serif; 
            border-radius: 4px;
            transition: 0.3s;
        }
        .form-input:focus { border-color: #4dff88; outline: none; background: #000; }

        .create-btn { 
            display: inline-block; 
            padding: 12px 30px; 
            background: #fff; 
            color: #000; 
            text-transform: uppercase; 
            font-family: 'Oswald', sans-serif; 
            font-size: 14px; 
            border: none; 
            cursor: pointer; 
            width: 100%; 
            transition: 0.3s;
            border-radius: 2px;
        }
        .create-btn:hover { background: #4dff88; box-shadow: 0 0 15px rgba(77, 255, 136, 0.3); }

        /* Sidebar Items/Filters */
        .sidebar-item {
            display: block;
            padding: 10px 0;
            color: #888;
            text-decoration: none;
            font-family: 'Oswald', sans-serif;
            text-transform: uppercase;
            font-size: 16px;
            transition: all 0.3s ease;
            border-bottom: 1px solid rgba(255,255,255,0.05);
        }
        .sidebar-item:hover, .sidebar-item.active { color: #fff; padding-left: 10px; border-color: rgba(255,255,255,0.2); }
        .sidebar-item.active { color: #4dff88; }

        /* Table */
        .product-table { width: 100%; border-collapse: collapse; margin-top: 30px; }
        .product-table th { 
            text-align: left; 
            padding: 15px; 
            border-bottom: 1px solid #4dff88; 
            font-family: 'Oswald', sans-serif; 
            text-transform: uppercase; 
            color: #888; 
            font-size: 12px; 
            letter-spacing: 1px;
        }
        .product-table td { 
            padding: 15px; 
            border-bottom: 1px solid rgba(255,255,255,0.05); 
            color: #fff; 
            font-size: 14px; 
            vertical-align: top; 
            font-family: 'Montserrat', sans-serif; 
        }
        .product-row { transition: background 0.2s; }
        .product-row:hover { background: rgba(255,255,255,0.02); }

        /* Badges */
        .status-badge { padding: 4px 10px; border-radius: 2px; font-size: 10px; text-transform: uppercase; font-weight: 600; letter-spacing: 0.5px; display: inline-block; }
        .status-instock { background: rgba(77, 255, 136, 0.1); color: #4dff88; border: 1px solid rgba(77, 255, 136, 0.3); }
        .status-lowstock { background: rgba(255, 170, 77, 0.1); color: #ffaa4d; border: 1px solid rgba(255, 170, 77, 0.3); }
        .status-outstock { background: rgba(255, 77, 77, 0.1); color: #ff4d4d; border: 1px solid rgba(255, 77, 77, 0.3); }

        /* Modal */
        .modal-overlay { display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.9); z-index: 9999; justify-content: center; align-items: center; backdrop-filter: blur(8px); }
        .modal-box { 
            background: #1a1a1a; 
            padding: 40px; 
            width: 100%; 
            max-width: 550px; 
            border: 1px solid rgba(255,255,255,0.1); 
            position: relative; 
            box-shadow: 0 20px 50px rgba(0,0,0,0.5);
        }
        .close-modal { position: absolute; top: 20px; right: 20px; color: #666; cursor: pointer; font-family: 'Oswald'; font-size: 12px; transition: 0.3s; }
        .close-modal:hover { color: #fff; }

        /* Footer */
        .footer { padding: 50px 40px; border-top: 1px solid rgba(255,255,255,0.1); margin-top: 60px; }
        .footer-text { color: #666; font-size: 12px; text-transform: uppercase; font-family: 'Montserrat'; }

        /* Responsive */
        @media (max-width: 991px) {
            .dashboard-nav { padding: 0 20px; height: 70px; }
            .nav-center { display: none; }
            .ticker-wrapper { top: 70px; }
            .dashboard-section { padding-top: 140px; }
            .dashboard-container { grid-template-columns: 1fr; }
            .sidebar-menu { border-right: none; border-bottom: 1px solid rgba(255,255,255,0.1); padding-bottom: 30px; margin-bottom: 30px; padding-right: 0; }
        }
    </style>
</head>

<body class="body">

    <nav class="dashboard-nav">
        <div class="nav-left">
            <a href="/" class="w-inline-block" style="text-decoration: none;">
                <div class="nav-logo-text">Stock Master</div>
            </a>
        </div>

        <div class="nav-center">
            <a href="/home" class="nav-pill">
                <span class="letter-wrap">Dashboard</span>
            </a>
            <a href="/products" aria-current="page" class="nav-pill active">
                <span class="letter-wrap">Products</span>
            </a>
            <a href="/operations" class="nav-pill">
                <span class="letter-wrap">Operations</span>
            </a>
            <a href="/warehouses/map" class="nav-pill">
                <span class="letter-wrap">Map</span>
            </a>
        </div>

        <div class="nav-right">
            <div class="user-status">
                <div class="status-dot"></div>
                <span>Live</span>
            </div>
            <a href="/users/logout" class="logout-btn">
                Logout
                <img src="https://cdn.prod.website-files.com/67a323a1c68594827fa0cca9/67a323a1c68594827fa0ccb4_Vector.svg" width="12" alt="" style="filter: invert(1);">
            </a>
        </div>
    </nav>

    <div class="ticker-wrapper">
        <div class="ticker-text">
            INVENTORY MANAGEMENT SYSTEM &nbsp;&nbsp;//&nbsp;&nbsp; CATALOG STATUS: ACTIVE &nbsp;&nbsp;//&nbsp;&nbsp; REAL-TIME STOCK MONITORING &nbsp;&nbsp;//&nbsp;&nbsp; DATABASE SYNCED &nbsp;&nbsp;//&nbsp;&nbsp; 
            INVENTORY MANAGEMENT SYSTEM &nbsp;&nbsp;//&nbsp;&nbsp; CATALOG STATUS: ACTIVE &nbsp;&nbsp;//&nbsp;&nbsp; REAL-TIME STOCK MONITORING &nbsp;&nbsp;//&nbsp;&nbsp; DATABASE SYNCED &nbsp;&nbsp;//&nbsp;&nbsp;
        </div>
    </div>

    <section class="dashboard-section">
        <div class="dashboard-container">
            
            <aside class="sidebar-menu">
                <div class="sidebar-header">Smart Filters</div>
                <form action="/products" method="GET" style="margin-bottom: 40px;">
                    <div class="form-group" style="margin-bottom: 15px;">
                        <input type="text" name="search" class="form-input" placeholder="Search SKU or Name..." value="<%= search %>">
                    </div>

                    <div class="form-group" style="margin-bottom: 15px;">
                        <select name="category" class="form-input" onchange="this.form.submit()">
                            <option value="">All Categories</option>
                            <% categories.forEach(cat => { %>
                                <option value="<%= cat %>" <%= selectedCategory === cat ? 'selected' : '' %>><%= cat %></option>
                            <% }) %>
                        </select>
                    </div>

                    <div style="display: flex; flex-direction: column; gap: 0;">
                        <button name="filter" value="" class="sidebar-item <%= selectedFilter === '' && !selectedCategory ? 'active' : '' %>" style="background:none; border:none; text-align:left; cursor:pointer; width: 100%;">
                            All Products
                        </button>
                        <button name="filter" value="low_stock" class="sidebar-item <%= selectedFilter === 'low_stock' ? 'active' : '' %>" style="background:none; border:none; text-align:left; cursor:pointer; color: #ff4d4d; width: 100%;">
                            ⚠️ Low Stock
                        </button>
                    </div>

                    <button type="submit" style="display: none;"></button>
                </form>
                
                <div class="sidebar-header">Actions</div>
                <button onclick="openModal()" class="create-btn">+ New Product</button>
            </aside>

            <div class="main-content">
                
                <% if (success && success.length > 0) { %>
                    <div style="background: rgba(77, 255, 136, 0.1); color: #4dff88; padding: 15px; border: 1px solid #4dff88; margin-bottom: 20px; font-family: 'Oswald'; border-radius: 4px;"><%= success %></div>
                <% } %>

                <div style="display: flex; justify-content: space-between; align-items: flex-end; margin-bottom: 30px; border-bottom: 1px solid rgba(255,255,255,0.1); padding-bottom: 20px;">
                    <div>
                        <h2 style="font-family: 'Oswald'; font-size: 40px; margin: 0; text-transform: uppercase; line-height: 1;">Inventory List</h2>
                        <div style="color: #888; font-size: 14px; margin-top: 5px; font-family: 'Montserrat';">Manage and track your stock levels.</div>
                    </div>
                    <div style="font-family: 'Oswald'; color: #4dff88; font-size: 14px; letter-spacing: 1px;">TOTAL SKUs: <%= products.length %></div>
                </div>

                <div style="overflow-x: auto;">
                    <table class="product-table">
                        <thead>
                            <tr>
                                <th>SKU</th>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Unit</th>
                                <th>Stock by Location</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (products.length > 0) { %>
                                <% products.forEach(function(product) { %>
                                    <tr class="product-row">
                                        <td style="font-family: 'Oswald'; letter-spacing: 1px; color: #fff;"><%= product.sku %></td>
                                        
                                        <td>
                                            <a href="/products/<%= product._id %>/history" style="color: #4dff88; text-decoration: none; font-weight: 600; transition: 0.3s;">
                                                <%= product.name %>
                                            </a>
                                        </td>
                                        
                                        <td><%= product.category %></td>
                                        <td style="text-transform: lowercase; color: #888;"><%= product.unitOfMeasure %></td>
                                        
                                        <td>
                                            <% if(product.stockByLocation && product.stockByLocation.length > 0) { %>
                                                <div style="font-size: 12px;">
                                                    <% product.stockByLocation.forEach(function(loc) { %>
                                                        <% if(loc.quantity > 0 && loc.warehouse) { %>
                                                            <div style="display:flex; justify-content:space-between; width:180px; margin-bottom:4px; border-bottom: 1px dashed rgba(255,255,255,0.1); padding-bottom: 2px;">
                                                                <span style="color:#888"><%= loc.warehouse.name %>:</span>
                                                                <span style="color:#fff; font-family: 'Oswald';"><%= loc.quantity %></span>
                                                            </div>
                                                        <% } %>
                                                    <% }); %>
                                                </div>
                                                <div style="margin-top:6px; padding-top:4px; font-weight:bold; color:#fff; font-size: 12px;">
                                                    Total: <span style="color: #4dff88; font-family: 'Oswald'; font-size: 14px;"><%= product.totalStock %></span> <span style="color:#666; font-size: 10px;"><%= product.unitOfMeasure %></span>
                                                </div>
                                            <% } else { %>
                                                <span style="color: #555;">0.00</span>
                                            <% } %>
                                        </td>

                                        <td>
                                            <% if ((product.totalStock) <= 0) { %>
                                                <span class="status-badge status-outstock">Out of Stock</span>
                                            <% } else if (product.totalStock <= product.minimumStock) { %>
                                                <span class="status-badge status-lowstock">Low Stock</span>
                                            <% } else { %>
                                                <span class="status-badge status-instock">In Stock</span>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr><td colspan="6" style="text-align: center; padding: 40px; color: #666;">No products found. Click "+ New Product" to add one.</td></tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

    <section class="footer">
        <div class="footer-text">StockMaster IMS v1.0 © 2025</div>
    </section>

    <div id="createModal" class="modal-overlay">
        <div class="modal-box">
            <div class="close-modal" onclick="closeModal()">✕ CLOSE</div>
            <h2 style="font-family: 'Oswald'; font-size: 24px; margin-bottom: 5px; text-transform: uppercase; color: #fff;">Create New Product</h2>
            <div style="color: #666; font-size: 12px; margin-bottom: 30px; font-family: 'Montserrat';">Add a new SKU to your inventory database.</div>
            
            <form action="/products/create" method="POST">
                <div class="form-group">
                    <label class="form-label">Product Name</label>
                    <input type="text" name="name" class="form-input" placeholder="e.g. Steel Rods 10mm" required>
                </div>

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                    <div class="form-group">
                        <label class="form-label">SKU / Code</label>
                        <input type="text" name="sku" class="form-input" placeholder="e.g. SR-001" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Category</label>
                        <input type="text" name="category" class="form-input" placeholder="e.g. Raw Material" required>
                    </div>
                </div>

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                     <div class="form-group">
                        <label class="form-label">Low Stock Alert At</label>
                        <input type="number" name="minimumStock" class="form-input" placeholder="Default: 10" min="0">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Unit of Measure</label>
                        <select name="unitOfMeasure" class="form-input" style="height: 45px;">
                            <option value="units">Units</option>
                            <option value="kg">Kilograms (kg)</option>
                            <option value="m">Meters (m)</option>
                            <option value="liters">Liters (l)</option>
                        </select>
                    </div>
                </div>

                <div style="background: rgba(255,255,255,0.03); padding: 20px; border: 1px solid rgba(255,255,255,0.05); border-radius: 4px; margin-bottom: 20px; margin-top: 10px;">
                    <h4 style="font-family: 'Oswald'; color: #4dff88; margin: 0 0 15px 0; font-size: 12px; letter-spacing: 1px;">OPENING STOCK (OPTIONAL)</h4>
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                        <div class="form-group" style="margin-bottom: 0;">
                            <label class="form-label">Quantity</label>
                            <input type="number" name="stock" class="form-input" placeholder="0" min="0">
                        </div>
                        <div class="form-group" style="margin-bottom: 0;">
                            <label class="form-label">Location</label>
                            <select name="initialWarehouse" class="form-input" style="height: 45px;">
                                <option value="" disabled selected>Select Warehouse</option>
                                <% if (typeof warehouses !== 'undefined') { %>
                                    <% warehouses.forEach(function(wh) { %>
                                        <option value="<%= wh._id %>"><%= wh.name %></option>
                                    <% }); %>
                                <% } %>
                            </select>
                        </div>
                    </div>
                </div>

                <button type="submit" class="create-btn" style="width: 100%;">Create Product</button>
            </form>
        </div>
    </div>

    <script>
        // Text Animation Logic (copied from Dashboard)
        const letterWrapClass = 'letter-wrap';
        const letterWrapElements = document.getElementsByClassName(letterWrapClass);
        
        [...letterWrapElements].forEach(el => {
            letterWrap(el, letterWrapClass);
        });

        function letterWrap(el, cls) {
            const words = el.textContent.split(' ');
            const letters = [];
            cls = cls || 'letter-wrap'
            words.forEach(word => {
                let html = '';
                for (var letter in word) {
                    html += `<span class="${cls}__char"><span class="${cls}__char-inner" data-letter="${word[letter]}">${word[letter]}</span></span>`;
                };
                let wrappedWords = `<span class="${cls}__word">${html}</span>`;
                letters.push(wrappedWords);
            });
            return el.innerHTML = letters.join(' ');
        }

        // Smooth Scroll
        if (window.innerWidth > 780) {
            const lenis = new Lenis({ lerp: 0.1, smooth: true });
            function raf(time) { lenis.raf(time); requestAnimationFrame(raf); }
            requestAnimationFrame(raf);
        }

        // Modal Logic
        const modal = document.getElementById('createModal');
        const modalBox = modal.querySelector('.modal-box');

        function openModal() {
            modal.style.display = 'flex';
            gsap.fromTo(modal, {opacity: 0}, {opacity: 1, duration: 0.3});
            gsap.fromTo(modalBox, {y: 50, opacity: 0}, {y: 0, opacity: 1, duration: 0.4, delay: 0.1});
        }

        function closeModal() {
            gsap.to(modal, {opacity: 0, duration: 0.3, onComplete: () => {
                modal.style.display = 'none';
            }});
        }

        modal.addEventListener('click', (e) => {
            if (e.target === modal) closeModal();
        });
    </script>
</body>
</html>