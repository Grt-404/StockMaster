        <a href="/" class="header-text-left _1 fixed-right-mob w-inline-block"><div class="letter-wrap black">STOCKMASTER</div></a>
        <div class="header-text-left fixed-left">
            <div class="header-text-left fix-size">
                <a href="/home" class="menu-link-block w-inline-block"><div class="letter-wrap">Dashboard</div></a>
                <a href="/products" class="menu-link-block w-inline-block"><div class="letter-wrap">Products</div></a>
                <a href="/operations" aria-current="page" class="menu-link-block w-inline-block w--current"><div class="letter-wrap">Operations</div></a>
            </div>
            <div class="header-text-left fix-size">
                <a href="/warehouses/map" class="menu-link-block w-inline-block"><div class="letter-wrap">Warehouse</div></a>
                <a href="/settings" class="menu-link-block w-inline-block"><div class="letter-wrap">Settings</div></a>
