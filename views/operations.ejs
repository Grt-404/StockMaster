    <section class="dashboard-section">
        <div class="dashboard-grid">
            
            <aside class="sidebar-menu">
    <form action="/operations" method="GET" style="margin-bottom: 40px;">
        <h3 class="form-label" style="color: white; margin-bottom: 15px;">Filter Operations</h3>
        
        <div class="form-group" style="margin-bottom: 15px;">
            <input type="text" name="search" class="form-input" placeholder="Ref # or Partner..." value="<%= search %>">
        </div>

        <div class="form-group" style="margin-bottom: 10px;">
            <select name="type" class="form-input" onchange="this.form.submit()">
                <option value="">All Types</option>
                <option value="Receipt" <%= selectedType === 'Receipt' ? 'selected' : '' %>>Receipts (IN)</option>
                <option value="Delivery" <%= selectedType === 'Delivery' ? 'selected' : '' %>>Deliveries (OUT)</option>
                <option value="Transfer" <%= selectedType === 'Transfer' ? 'selected' : '' %>>Transfers</option>
                <option value="Adjustment" <%= selectedType === 'Adjustment' ? 'selected' : '' %>>Adjustments</option>
            </select>
        </div>

        <div class="form-group" style="margin-bottom: 15px;">
            <select name="status" class="form-input" onchange="this.form.submit()">
                <option value="">All Statuses</option>
                <option value="Draft" <%= selectedStatus === 'Draft' ? 'selected' : '' %>>Draft (Pending)</option>
                <option value="Done" <%= selectedStatus === 'Done' ? 'selected' : '' %>>Done (Validated)</option>
            </select>
        </div>
        
        <a href="/operations" style="font-size: 12px; color: #666; text-decoration: underline;">Clear Filters</a>
    </form>

    <button onclick="openModal()" class="create-btn">+ New Operation</button>
</aside>

            <div class="main-content">
                
                <% if (success && success.length > 0) { %>
                    <div style="background: rgba(77, 255, 136, 0.1); color: #4dff88; padding: 15px; border: 1px solid #4dff88; margin-bottom: 20px; font-family: 'Oswald';"><%= success %></div>
                <% } %>
                <% if (error && error.length > 0) { %>
                    <div style="background: rgba(255, 77, 77, 0.1); color: #ff4d4d; padding: 15px; border: 1px solid #ff4d4d; margin-bottom: 20px; font-family: 'Oswald';"><%= error %></div>
                <% } %>

                <h2 style="font-family: 'Oswald', sans-serif; font-size: 32px; margin-bottom: 20px;">Movement History</h2>

                <table class="ops-table">
                    <thead>
                        <tr>
                            <th>Reference</th>
                            <th>Type</th>
                            <th>Source</th>
                            <th>Destination</th>
                            <th>Product</th>
                            <th>Qty</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (operations.length > 0) { %>
                            <% operations.forEach(function(op) { %>
                                <tr>
                                    <td style="font-family: 'Oswald'; letter-spacing: 1px;"><%= op.reference %></td>
                                    <td>
                                        <% if(op.type == 'Receipt') { %><span style="color:#4dff88">IN</span><% } %>
                                        <% if(op.type == 'Delivery') { %><span style="color:#ffaa4d">OUT</span><% } %>
                                        <% if(op.type == 'Transfer') { %><span>INT</span><% } %>
                                        <% if(op.type == 'Adjustment') { %><span style="color:#aaa">ADJ</span><% } %>
                                    </td>
                                    
                                    <td style="font-size: 12px; color: #888;">
                                        <%= op.sourceLocation ? op.sourceLocation.name : (op.type === 'Adjustment' ? 'Manual Count' : 'Vendor') %>
                                    </td>
                                    
                                    <td style="font-size: 12px; color: #888;">
                                        <%= op.destinationLocation ? op.destinationLocation.name : (op.type === 'Adjustment' ? 'Update' : 'Customer') %>
                                    </td>

                                    <td>
                                        <% if(op.items[0] && op.items[0].product) { %>
                                            <%= op.items[0].product.name %>
                                        <% } else { %>
                                            <span style="color:#555;">Deleted</span>
                                        <% } %>
                                    </td>
                                    
                                    <td><%= op.items[0].quantity %></td>
                                    
                                    <td>
                                        <span class="status-badge <%= op.status == 'Done' ? 'status-done' : 'status-draft' %>">
                                            <%= op.status %>
                                        </span>
                                    </td>
                                    
                                    <td>
                                        <% if (op.status === 'Draft') { %>
                                            <form action="/operations/validate/<%= op._id %>" method="POST" style="display:inline;">
                                                <button type="submit" class="validate-btn">Validate</button>
                                            </form>
                                        <% } else { %>
                                            <span style="color:#555; font-size:12px;">LOCKED</span>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr><td colspan="8" style="text-align:center; padding: 30px; color: #666;">No operations found.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <div id="createModal" class="modal-overlay">
        <div class="modal-box">
            <div class="close-modal" onclick="closeModal()">âœ•</div>
            <h2 style="font-family: 'Oswald'; text-transform: uppercase; margin-bottom: 30px;">New Movement</h2>
            
            <form action="/operations/create" method="POST">
                <div class="form-group">
                    <label class="form-label">Operation Type</label>
                    <select name="type" id="opType" class="form-input" style="height: 45px;" onchange="updateFormLayout()" required>
                        <option value="Receipt">Receipt (Inbound from Vendor)</option>
                        <option value="Delivery">Delivery (Outbound to Customer)</option>
                        <option value="Transfer">Internal Transfer (Warehouse to Warehouse)</option>
                        <option value="Adjustment">Inventory Adjustment (Stock Count)</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">Partner / Reference</label>
                    <input type="text" name="partner" class="form-input" placeholder="Optional: Vendor Name or Reason">
                </div>

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                    
                    <div class="form-group" id="sourceGroup" style="display:none;">
                        <label class="form-label">Source Location</label>
                        <select name="source" class="form-input">
                            <option value="" selected disabled>Select Source</option>
                            <% warehouses.forEach(wh => { %>
                                <option value="<%= wh._id %>"><%= wh.name %></option>
                            <% }) %>
                        </select>
                    </div>

                    <div class="form-group" id="destGroup" style="display:none;">
                        <label class="form-label">Destination Location</label>
                        <select name="destination" class="form-input">
                            <option value="" selected disabled>Select Destination</option>
                            <% warehouses.forEach(wh => { %>
                                <option value="<%= wh._id %>"><%= wh.name %></option>
                            <% }) %>
                        </select>
                    </div>

                    <div class="form-group" id="adjGroup" style="display:none; grid-column: span 2;">
                        <label class="form-label">Location to Adjust</label>
                        <select name="location" class="form-input">
                            <option value="" selected disabled>Select Warehouse to Count</option>
                            <% warehouses.forEach(wh => { %>
                                <option value="<%= wh._id %>"><%= wh.name %></option>
                            <% }) %>
                        </select>
                    </div>
                </div>

                <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 20px;">
                    <div class="form-group">
                        <label class="form-label">Product</label>
                        <select name="product" class="form-input" required>
                            <% products.forEach(function(prod) { %>
                                <option value="<%= prod._id %>"><%= prod.name %> (Total: <%= prod.totalStock || prod.stock %>)</option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label" id="qtyLabel">Quantity</label>
                        <input type="number" name="quantity" class="form-input" min="0" value="1" required>
                    </div>
                </div>

                <button type="submit" class="create-btn">Create Draft</button>
            </form>
        </div>
    </div>

    <script>
        // Modal Logic
        const modal = document.getElementById('createModal');
        const modalBox = modal.querySelector('.modal-box');

        function openModal() { 
            modal.style.display = 'flex'; 
            gsap.fromTo(".modal-box", {y: 50, opacity: 0}, {y: 0, opacity: 1, duration: 0.3});
        }
        function closeModal() { 
            gsap.to(".modal-box", {y: 50, opacity: 0, duration: 0.3, onComplete: () => {
                modal.style.display = 'none';
            }});
        }

        modal.addEventListener('click', (e) => {
            if (e.target === modal) closeModal();
        });

        // Text Animation
        function letterWrap(el, cls) {
            const words = el.textContent.split(' ');
            const letters = words.map(word => `<span class="letter-wrap__word">${word.split('').map(l => `<span class="letter-wrap__char"><span class="letter-wrap__char-inner" data-letter="${l}">${l}</span></span>`).join('')}</span>`);
            el.innerHTML = letters.join(' ');
        }
        document.querySelectorAll('.letter-wrap').forEach(el => letterWrap(el, 'letter-wrap'));

        // Form Layout Logic
        function updateFormLayout() {
            const type = document.getElementById('opType').value;
            const sourceGroup = document.getElementById('sourceGroup');
            const destGroup = document.getElementById('destGroup');
            const adjGroup = document.getElementById('adjGroup');
            const qtyLabel = document.getElementById('qtyLabel');

            // Hide all first
            sourceGroup.style.display = 'none';
            destGroup.style.display = 'none';
            adjGroup.style.display = 'none';
            qtyLabel.innerText = "Quantity";

            if (type === 'Receipt') {
                destGroup.style.display = 'block';
                // Receipt needs destination (Warehouse), Source is External (Hidden)
            } else if (type === 'Delivery') {
                sourceGroup.style.display = 'block';
                // Delivery needs source (Warehouse), Destination is External (Hidden)
            } else if (type === 'Transfer') {
                sourceGroup.style.display = 'block';
                destGroup.style.display = 'block';
                // Transfers needs both
            } else if (type === 'Adjustment') {
                adjGroup.style.display = 'block';
                qtyLabel.innerText = "Real Counted Quantity"; // Update label context
            }
        }
        
        // Initialize form state
        updateFormLayout();
    </script>
</body>
