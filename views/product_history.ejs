<!DOCTYPE html>
<html data-wf-domain="www.stockmaster.app" lang="en">
<head>
    <meta charset="utf-8"/>
    <title>StockMaster | <%= product.name %> Ledger</title>
    <meta content="width=device-width, initial-scale=1" name="viewport"/>
    
    <link href="https://cdn.prod.website-files.com/67a323a1c68594827fa0cca9/css/soscale-39349c-c66c87b5666753b1b89d5bc1.webflow.shared.1aa2f82cd.css" rel="stylesheet" type="text/css"/>
    <link href="https://fonts.googleapis.com" rel="preconnect"/>
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin="anonymous"/>
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js" type="text/javascript"></script>
    <script type="text/javascript">WebFont.load({  google: {    families: ["Montserrat:100,100italic,200,200italic,300,300italic,400,400italic,500,500italic,600,600italic,700,700italic,800,800italic,900,900italic","Oswald:200,300,400,500,600,700"]  }});</script>
    
    <link href="https://cdn.jsdelivr.net/npm/splitting@1.0.6/dist/splitting.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js" defer ></script>
    <script src="https://cdn.jsdelivr.net/gh/studio-freight/lenis@1.0.23/bundled/lenis.min.js"></script>

    <style>
        /* --- Shared Dashboard Styles --- */
        body { background-color: #0e0e0e; color: #edf2f4; font-family: 'Montserrat', sans-serif; margin: 0; }
        .w-webflow-badge { display: none !important; } 
        html.lenis { height: auto; }
        .lenis.lenis-smooth { scroll-behavior: auto; }

        /* Letter Wrap Animation */
        .letter-wrap { display: inline-block; position: relative; } 
        .letter-wrap * { pointer-events: none; } 
        .letter-wrap__word { display: inline-flex; position: relative; overflow: hidden; } 
        .letter-wrap__char { display: inline-block; position: relative; text-transform: uppercase; } 
        .letter-wrap__char-inner { display: inline-block; } 
        .letter-wrap__char-inner:after { content: attr(data-letter); position: absolute; top: 100%; left: 0; }

        /* Layout */
        .dashboard-section { 
            padding-top: 160px; 
            padding-bottom: 100px; 
            min-height: 100vh; 
            background-color: #0e0e0e; 
            color: #edf2f4; 
            position: relative;
            z-index: 2;
            background-image: radial-gradient(circle at 50% 50%, #1a1a1a 0%, #0e0e0e 100%);
        }

        .dashboard-container {
            max-width: 1400px;
            width: 95vw;
            margin: 40px auto 0;
            display: grid;
            grid-template-columns: 280px 1fr; /* Slightly wider sidebar for stats */
            gap: 60px;
        }

        /* Header */
        .dashboard-nav {
            position: fixed;
            top: 0; left: 0; right: 0;
            height: 90px;
            padding: 0 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: rgba(14, 14, 14, 0.7);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.08);
            z-index: 1000;
            transition: all 0.3s ease;
        }
        .nav-left { display: flex; align-items: center; gap: 30px; }
        .nav-logo-text {
            font-family: 'Oswald', sans-serif;
            font-size: 24px;
            color: #fff;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 500;
            text-decoration: none;
        }
        .nav-center {
            display: flex;
            gap: 10px;
            background: rgba(255, 255, 255, 0.03);
            padding: 5px;
            border-radius: 50px;
            border: 1px solid rgba(255, 255, 255, 0.05);
        }
        .nav-pill {
            padding: 8px 20px;
            border-radius: 20px;
            color: #888;
            text-decoration: none;
            font-family: 'Montserrat', sans-serif;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        .nav-pill:hover { color: #fff; background: rgba(255, 255, 255, 0.1); }
        .nav-pill.active { color: #000; background: #fff; font-weight: 600; }
        
        .nav-right { display: flex; align-items: center; gap: 20px; }
        .user-status { display: flex; align-items: center; gap: 8px; font-family: 'Oswald', sans-serif; font-size: 14px; color: #fff; }
        .status-dot { width: 8px; height: 8px; background: #4dff88; border-radius: 50%; box-shadow: 0 0 8px #4dff88; animation: pulse 2s infinite; }
        .logout-btn {
            display: flex; align-items: center; gap: 8px; padding: 8px 16px;
            border: 1px solid rgba(255,255,255,0.2); border-radius: 4px;
            color: #fff; text-decoration: none; font-family: 'Oswald', sans-serif;
            text-transform: uppercase; font-size: 12px; transition: all 0.3s;
        }
        .logout-btn:hover { background: #fff; color: #000; border-color: #fff; }

        /* Ticker */
        .ticker-wrapper {
            position: fixed;
            top: 90px;
            width: 100%;
            background: rgba(0,0,0,0.8);
            border-bottom: 1px solid rgba(255,255,255,0.05);
            overflow: hidden;
            white-space: nowrap;
            z-index: 5;
            padding: 6px 0;
        }
        .ticker-text {
            display: inline-block;
            font-family: 'Montserrat', sans-serif;
            font-size: 10px;
            text-transform: uppercase;
            color: #4dff88;
            letter-spacing: 1px;
            animation: ticker 40s linear infinite;
        }
        @keyframes ticker { 0% { transform: translateX(0); } 100% { transform: translateX(-50%); } }

        /* Sidebar & Product Stats */
        .sidebar-menu { border-right: 1px solid rgba(255,255,255,0.1); padding-right: 40px; }
        .back-btn {
            display: inline-block; margin-bottom: 30px;
            color: #888; text-decoration: none;
            font-family: 'Oswald', sans-serif; text-transform: uppercase; font-size: 12px; letter-spacing: 1px;
            transition: color 0.3s;
        }
        .back-btn:hover { color: #fff; text-decoration: underline; }

        .stat-card {
            background: #121212;
            border: 1px solid rgba(255,255,255,0.1);
            padding: 25px;
            margin-bottom: 30px;
            position: relative;
            overflow: hidden;
        }
        .stat-label { font-family: 'Oswald'; color: #888; font-size: 12px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 5px; }
        .stat-value { font-family: 'Oswald'; font-size: 56px; color: #fff; line-height: 1; }
        .stat-sub { font-family: 'Montserrat'; font-size: 12px; color: #4dff88; margin-top: 5px; }

        .info-group { margin-bottom: 20px; }
        .info-label { color: #666; font-family: 'Oswald'; font-size: 10px; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 5px; }
        .info-text { color: #fff; font-family: 'Montserrat'; font-size: 16px; }

        /* Ledger Table */
        .ledger-table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        .ledger-table th {
            text-align: left;
            padding: 15px;
            border-bottom: 1px solid #4dff88;
            font-family: 'Oswald', sans-serif;
            text-transform: uppercase;
            color: #888;
            font-size: 12px;
            letter-spacing: 1px;
        }
        .ledger-table td {
            padding: 15px;
            border-bottom: 1px solid rgba(255,255,255,0.05);
            color: #fff;
            font-size: 14px;
            vertical-align: middle;
        }
        .ledger-table tr:hover td { background: rgba(255,255,255,0.02); }
        
        /* Badges */
        .badge-in { color: #4dff88; font-family: 'Oswald'; letter-spacing: 1px; }
        .badge-out { color: #ff4d4d; font-family: 'Oswald'; letter-spacing: 1px; }
        .status-done { color: #4dff88; font-size: 11px; text-transform: uppercase; border: 1px solid rgba(77, 255, 136, 0.3); padding: 2px 6px; border-radius: 2px; }
        .status-draft { color: #ffbd2e; font-size: 11px; text-transform: uppercase; border: 1px solid rgba(255, 189, 46, 0.3); padding: 2px 6px; border-radius: 2px; }

        /* Footer */
        .footer { padding: 50px 40px; border-top: 1px solid rgba(255,255,255,0.1); margin-top: 60px; }
        .footer-text { color: #666; font-size: 12px; text-transform: uppercase; font-family: 'Montserrat'; }

        @media (max-width: 991px) {
            .dashboard-nav { padding: 0 20px; height: 70px; }
            .nav-center { display: none; }
            .ticker-wrapper { top: 70px; }
            .dashboard-container { grid-template-columns: 1fr; gap: 40px; }
            .sidebar-menu { border-right: none; border-bottom: 1px solid rgba(255,255,255,0.1); padding-bottom: 30px; padding-right: 0; }
            .stat-card { display: flex; justify-content: space-between; align-items: center; }
            .stat-value { font-size: 40px; }
        }
    </style>
</head>
<body class="body">

    <nav class="dashboard-nav">
        <div class="nav-left">
            <a href="/" class="w-inline-block" style="text-decoration: none;">
                <div class="nav-logo-text">Stock Master</div>
            </a>
        </div>

        <div class="nav-center">
            <a href="/home" class="nav-pill">
                <span class="letter-wrap">Dashboard</span>
            </a>
            <a href="/products" class="nav-pill active">
                <span class="letter-wrap">Products</span>
            </a>
            <a href="/operations" class="nav-pill">
                <span class="letter-wrap">Operations</span>
            </a>
            <a href="/warehouses/map" class="nav-pill">
                <span class="letter-wrap">Map</span>
            </a>
        </div>

        <div class="nav-right">
            <div class="user-status">
                <div class="status-dot"></div>
                <span>Live</span>
            </div>
            <a href="/users/logout" class="logout-btn">
                Logout
                <img src="https://cdn.prod.website-files.com/67a323a1c68594827fa0cca9/67a323a1c68594827fa0ccb4_Vector.svg" width="12" alt="" style="filter: invert(1);">
            </a>
        </div>
    </nav>

    <div class="ticker-wrapper">
        <div class="ticker-text">
            PRODUCT LEDGER ACCESS &nbsp;&nbsp;//&nbsp;&nbsp; VIEWING HISTORY FOR: <%= product.name.toUpperCase() %> &nbsp;&nbsp;//&nbsp;&nbsp; REAL-TIME STOCK TRACKING &nbsp;&nbsp;//&nbsp;&nbsp; 
            PRODUCT LEDGER ACCESS &nbsp;&nbsp;//&nbsp;&nbsp; VIEWING HISTORY FOR: <%= product.name.toUpperCase() %> &nbsp;&nbsp;//&nbsp;&nbsp; REAL-TIME STOCK TRACKING &nbsp;&nbsp;//&nbsp;&nbsp;
        </div>
    </div>

    <section class="dashboard-section">
        <div class="dashboard-container">
            <aside class="sidebar-menu">
                <a href="/products" class="back-btn">← Back to Products</a>
                
                <div class="stat-card">
                    <div>
                        <div class="stat-label">Current Stock</div>
                        <div class="stat-value"><%= product.stock %></div>
                    </div>
                    <div class="stat-sub"><%= product.unitOfMeasure %></div>
                </div>

                <div style="padding-left: 5px;">
                    <div class="info-group">
                        <div class="info-label">SKU Code</div>
                        <div class="info-text"><%= product.sku %></div>
                    </div>
                    
                    <div class="info-group">
                        <div class="info-label">Category</div>
                        <div class="info-text"><%= product.category %></div>
                    </div>

                    <div class="info-group">
                        <div class="info-label">Internal Reference</div>
                        <div class="info-text" style="font-family: monospace; color: #888;"><%= product._id %></div>
                    </div>
                </div>
            </aside>

            <div class="main-content">
                <div style="border-bottom: 1px solid rgba(255,255,255,0.1); padding-bottom: 20px; margin-bottom: 30px;">
                    <h2 style="font-family: 'Oswald'; font-size: 40px; margin: 0; text-transform: uppercase;"><%= product.name %></h2>
                    <div style="font-family: 'Montserrat'; font-size: 14px; color: #888; margin-top: 5px;">
                        Complete chronological history of stock movements.
                    </div>
                </div>

                <div style="overflow-x: auto;">
                    <table class="ledger-table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Reference</th>
                                <th>Type</th>
                                <th>Partner / Source</th>
                                <th>Change</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (operations.length > 0) { %>
                                <% operations.forEach(function(op) { %>
                                    <% 
                                        // Find the specific item line for this product in the operation
                                        const item = op.items.find(i => i.product.toString() === product._id.toString());
                                        const qty = item ? item.quantity : 0;
                                    %>
                                    <tr>
                                        <td style="color: #888; font-size: 12px;">
                                            <%= new Date(op.createdAt).toLocaleDateString() %>
                                            <span style="display:block; font-size: 10px;"><%= new Date(op.createdAt).toLocaleTimeString() %></span>
                                        </td>
                                        <td style="font-family: 'Oswald'; letter-spacing: 1px; color: #fff;"><%= op.reference %></td>
                                        <td style="font-size: 12px;"><%= op.type %></td>
                                        <td style="color: #ccc;"><%= op.partner || '-' %></td>
                                        <td>
                                            <% if (op.status === 'Done') { %>
                                                <% if (op.type === 'Receipt') { %>
                                                    <span class="badge-in">+<%= qty %></span>
                                                <% } else if (op.type === 'Delivery') { %>
                                                    <span class="badge-out">-<%= qty %></span>
                                                <% } else if (op.type === 'Adjustment') { %>
                                                    <span style="color: #aaa; font-family: 'Oswald';">Set to <%= qty %></span>
                                                <% } else { %>
                                                    <%= qty %>
                                                <% } %>
                                            <% } else { %>
                                                <span style="color: #555;">(Pending <%= qty %>)</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if(op.status === 'Done') { %>
                                                <span class="status-done">Done</span>
                                            <% } else { %>
                                                <span class="status-draft">Draft</span>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr><td colspan="6" style="text-align:center; padding: 40px; color: #666; font-style: italic;">No stock movements recorded for this product yet.</td></tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

    <section class="footer">
        <div class="footer-text">StockMaster IMS v1.0 © 2025</div>
    </section>
    
    <script>
        // Text Animation Logic (from Dashboard)
        const letterWrapClass = 'letter-wrap';
        const letterWrapElements = document.getElementsByClassName(letterWrapClass);
        
        [...letterWrapElements].forEach(el => {
            letterWrap(el, letterWrapClass);
        });

        function letterWrap(el, cls) {
            const words = el.textContent.split(' ');
            const letters = [];
            cls = cls || 'letter-wrap'
            words.forEach(word => {
                let html = '';
                for (var letter in word) {
                    html += `<span class="${cls}__char"><span class="${cls}__char-inner" data-letter="${word[letter]}">${word[letter]}</span></span>`;
                };
                let wrappedWords = `<span class="${cls}__word">${html}</span>`;
                letters.push(wrappedWords);
            });
            return el.innerHTML = letters.join(' ');
        }

        // Smooth Scroll
        if (window.innerWidth > 780) {
            const lenis = new Lenis({ lerp: 0.1, smooth: true });
            function raf(time) { lenis.raf(time); requestAnimationFrame(raf); }
            requestAnimationFrame(raf);
        }
    </script>
</body>
</html>