<!DOCTYPE html>
<html data-wf-domain="www.soscalemedia.se" lang="en">
<head>
    <meta charset="utf-8"/>
    <title>StockMaster | <%= product.name %> Ledger</title>
    <link href="https://cdn.prod.website-files.com/67a323a1c68594827fa0cca9/css/soscale-39349c-c66c87b5666753b1b89d5bc1.webflow.shared.1aa2f82cd.css" rel="stylesheet" type="text/css"/>
    <link href="https://fonts.googleapis.com" rel="preconnect"/>
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin="anonymous"/>
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js" type="text/javascript"></script>
    <script type="text/javascript">WebFont.load({  google: {    families: ["Montserrat:100,100italic,200,200italic,300,300italic,400,400italic,500,500italic,600,600italic,700,700italic,800,800italic,900,900italic","Oswald:200,300,400,500,600,700"]  }});</script>

    <style>
        .dashboard-section { padding-top: 120px; padding-bottom: 60px; min-height: 100vh; background-color: #0e0e0e; color: white; }
        .dashboard-grid { display: grid; grid-template-columns: 250px 1fr; gap: 40px; max-width: 1400px; margin: 0 auto; padding: 0 20px; }
        
        /* Sidebar Styles */
        .sidebar-menu { border-right: 1px solid rgba(255,255,255,0.1); padding-right: 20px; }
        .sidebar-item { display: block; padding: 15px 0; color: #888; text-decoration: none; font-family: 'Oswald', sans-serif; text-transform: uppercase; font-size: 16px; border-bottom: 1px solid rgba(255,255,255,0.05); }
        .sidebar-item:hover { color: #fff; }

        /* Ledger Table */
        .ledger-table { width: 100%; border-collapse: collapse; margin-top: 30px; font-family: 'Montserrat', sans-serif; }
        .ledger-table th { text-align: left; padding: 15px; border-bottom: 2px solid #fff; font-family: 'Oswald', sans-serif; text-transform: uppercase; color: #888; font-size: 12px; }
        .ledger-table td { padding: 15px; border-bottom: 1px solid rgba(255,255,255,0.1); color: #fff; font-size: 14px; }
        
        .badge-in { color: #4dff88; font-weight: bold; }
        .badge-out { color: #ff4d4d; font-weight: bold; }
        
        .back-btn { display: inline-block; margin-bottom: 20px; color: #888; text-decoration: none; font-family: 'Oswald'; text-transform: uppercase; font-size: 14px; }
        .back-btn:hover { color: #fff; }

        .w-webflow-badge { display: none !important; } 
    </style>
</head>
<body class="body">
    <nav class="hero-wrap">
        <a href="/" class="header-text-left _1 fixed-right-mob w-inline-block"><div class="letter-wrap black">STOCKMASTER</div></a>
        <div class="header-text-left fixed-left">
            <div class="header-text-left fix-size">
                <a href="/dashboard" class="menu-link-block w-inline-block"><div class="letter-wrap">Dashboard</div></a>
                <a href="/products" class="menu-link-block w-inline-block w--current"><div class="letter-wrap">Products</div></a>
                <a href="/operations" class="menu-link-block w-inline-block"><div class="letter-wrap">Operations</div></a>
            </div>
        </div>
        <div class="header-text-left fixed-center"><div class="hacker-text _1">Product Ledger</div></div>
        <a href="/users/logout" class="header-text-left _1 fixed-right w-inline-block">
            <img src="https://cdn.prod.website-files.com/67a323a1c68594827fa0cca9/67a323a1c68594827fa0ccb4_Vector.svg" alt="" class="arrow-black"/>
            <div class="letter-wrap black">LOGOUT</div>
        </a>
    </nav>

    <section class="dashboard-section">
        <div class="dashboard-grid">
            <aside class="sidebar-menu">
                <a href="/products" class="back-btn">‚Üê Back to Products</a>
                
                <div style="background: #1a1a1a; padding: 20px; border: 1px solid rgba(255,255,255,0.1); margin-top: 20px;">
                    <h3 style="font-family: 'Oswald'; margin-top: 0; color: #888; font-size: 14px;">Current Stock</h3>
                    <div style="font-family: 'Oswald'; font-size: 48px; line-height: 1.2;"><%= product.stock %></div>
                    <div style="font-family: 'Montserrat'; font-size: 12px; color: #666;"><%= product.unitOfMeasure %></div>
                </div>

                <div style="margin-top: 30px;">
                    <div class="form-label" style="color:#888; font-family:'Oswald'; font-size:12px;">SKU</div>
                    <div style="font-family:'Montserrat'; margin-bottom:15px;"><%= product.sku %></div>
                    
                    <div class="form-label" style="color:#888; font-family:'Oswald'; font-size:12px;">Category</div>
                    <div style="font-family:'Montserrat';"><%= product.category %></div>
                </div>
            </aside>

            <div class="main-content">
                <h2 style="font-family: 'Oswald'; font-size: 32px; margin-bottom: 10px;"><%= product.name %></h2>
                <div style="font-family: 'Montserrat'; color: #888; margin-bottom: 40px;">Complete history of stock movements for this item.</div>

                <table class="ledger-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Reference</th>
                            <th>Type</th>
                            <th>Partner</th>
                            <th>Change</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (operations.length > 0) { %>
                            <% operations.forEach(function(op) { %>
                                <% 
                                    // Find the specific item line for this product in the operation
                                    const item = op.items.find(i => i.product.toString() === product._id.toString());
                                    const qty = item ? item.quantity : 0;
                                %>
                                <tr>
                                    <td><%= new Date(op.createdAt).toLocaleDateString() %></td>
                                    <td style="font-family: 'Oswald'; letter-spacing: 1px;"><%= op.reference %></td>
                                    <td><%= op.type %></td>
                                    <td><%= op.partner || '-' %></td>
                                    <td>
                                        <% if (op.status === 'Done') { %>
                                            <% if (op.type === 'Receipt') { %>
                                                <span class="badge-in">+<%= qty %></span>
                                            <% } else if (op.type === 'Delivery') { %>
                                                <span class="badge-out">-<%= qty %></span>
                                            <% } else if (op.type === 'Adjustment') { %>
                                                <span style="color: #aaa;">Set to <%= qty %></span>
                                            <% } else { %>
                                                <%= qty %>
                                            <% } %>
                                        <% } else { %>
                                            <span style="color: #555;">(Pending)</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if(op.status === 'Done') { %>
                                            <span style="color: #4dff88;">Done</span>
                                        <% } else { %>
                                            <span style="color: #ffaa4d;">Draft</span>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr><td colspan="6" style="text-align:center; padding: 30px; color: #666;">No movements recorded yet.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
    
    <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
    <script>
        function letterWrap(el) {
            const words = el.textContent.split(' ');
            const letters = words.map(word => `<span class="letter-wrap__word">${word.split('').map(l => `<span class="letter-wrap__char"><span class="letter-wrap__char-inner" data-letter="${l}">${l}</span></span>`).join('')}</span>`);
            el.innerHTML = letters.join(' ');
        }
        document.querySelectorAll('.letter-wrap').forEach(el => letterWrap(el));
    </script>
</body>
</html>