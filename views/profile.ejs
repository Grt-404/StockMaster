<!DOCTYPE html>
<html data-wf-domain="www.stockmaster.app" lang="en">
<head>
    <meta charset="utf-8"/>
    <title>StockMaster | My Profile</title>
    <meta content="width=device-width, initial-scale=1" name="viewport"/>
    
    <link href="https://cdn.prod.website-files.com/67a323a1c68594827fa0cca9/css/soscale-39349c-c66c87b5666753b1b89d5bc1.webflow.shared.1aa2f82cd.css" rel="stylesheet" type="text/css"/>
    <link href="https://fonts.googleapis.com" rel="preconnect"/>
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin="anonymous"/>
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js" type="text/javascript"></script>
    <script type="text/javascript">WebFont.load({  google: {    families: ["Montserrat:100,100italic,200,200italic,300,300italic,400,400italic,500,500italic,600,600italic,700,700italic,800,800italic,900,900italic","Oswald:200,300,400,500,600,700"]  }});</script>
    
    <link href="https://cdn.jsdelivr.net/npm/splitting@1.0.6/dist/splitting.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js" defer ></script>
    <script src="https://cdn.jsdelivr.net/gh/studio-freight/lenis@1.0.23/bundled/lenis.min.js"></script>

    <style>
        /* --- Shared Dashboard Styles --- */
        body { background-color: #0e0e0e; color: #edf2f4; font-family: 'Montserrat', sans-serif; margin: 0; }
        .w-webflow-badge { display: none !important; } 
        html.lenis { height: auto; }
        .lenis.lenis-smooth { scroll-behavior: auto; }

        /* Letter Wrap Animation */
        .letter-wrap { display: inline-block; position: relative; } 
        .letter-wrap * { pointer-events: none; } 
        .letter-wrap__word { display: inline-flex; position: relative; overflow: hidden; } 
        .letter-wrap__char { display: inline-block; position: relative; text-transform: uppercase; } 
        .letter-wrap__char-inner { display: inline-block; } 
        .letter-wrap__char-inner:after { content: attr(data-letter); position: absolute; top: 100%; left: 0; }

        /* Layout */
        .dashboard-section { 
            padding-top: 140px; /* Reduced slightly since ticker is gone */
            padding-bottom: 100px; 
            min-height: 100vh; 
            background-color: #0e0e0e; 
            color: #edf2f4; 
            position: relative;
            z-index: 2;
            background-image: radial-gradient(circle at 50% 50%, #1a1a1a 0%, #0e0e0e 100%);
        }

        .dashboard-container {
            max-width: 1400px;
            width: 95vw;
            margin: 0 auto;
            display: grid;
            grid-template-columns: 240px 1fr;
            gap: 40px;
        }

        /* Header */
        .dashboard-nav {
            position: fixed;
            top: 0; left: 0; right: 0;
            height: 90px;
            padding: 0 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: rgba(14, 14, 14, 0.7);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.08);
            z-index: 1000;
            transition: all 0.3s ease;
        }
        .nav-left { display: flex; align-items: center; gap: 30px; }
        .nav-logo-text {
            font-family: 'Oswald', sans-serif;
            font-size: 24px;
            color: #fff;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 500;
            text-decoration: none;
        }
        .nav-center {
            display: flex;
            gap: 10px;
            background: rgba(255, 255, 255, 0.03);
            padding: 5px;
            border-radius: 50px;
            border: 1px solid rgba(255, 255, 255, 0.05);
        }
        .nav-pill {
            padding: 8px 20px;
            border-radius: 20px;
            color: #888;
            text-decoration: none;
            font-family: 'Montserrat', sans-serif;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        .nav-pill:hover { color: #fff; background: rgba(255, 255, 255, 0.1); }
        .nav-pill.active { color: #000; background: #fff; font-weight: 600; }
        
        .nav-right { display: flex; align-items: center; gap: 20px; }
        .user-status { display: flex; align-items: center; gap: 8px; font-family: 'Oswald', sans-serif; font-size: 14px; color: #fff; }
        .status-dot { width: 8px; height: 8px; background: #4dff88; border-radius: 50%; box-shadow: 0 0 8px #4dff88; animation: pulse 2s infinite; }
        .logout-btn {
            display: flex; align-items: center; gap: 8px; padding: 8px 16px;
            border: 1px solid rgba(255,255,255,0.2); border-radius: 4px;
            color: #fff; text-decoration: none; font-family: 'Oswald', sans-serif;
            text-transform: uppercase; font-size: 12px; transition: all 0.3s;
        }
        .logout-btn:hover { background: #fff; color: #000; border-color: #fff; }

        /* Sidebar Styles */
        .sidebar-menu { border-right: 1px solid rgba(255,255,255,0.1); padding-right: 20px; }
        .sidebar-header {
            font-family: 'Montserrat', sans-serif;
            font-size: 10px;
            text-transform: uppercase;
            letter-spacing: 2px;
            color: #666;
            margin-bottom: 15px;
            margin-top: 30px;
        }
        .sidebar-link {
            display: block;
            font-family: 'Oswald', sans-serif;
            font-size: 16px;
            text-transform: uppercase;
            color: #888;
            text-decoration: none;
            padding: 10px 0;
            transition: all 0.3s ease;
            position: relative;
        }
        .sidebar-link:hover, .sidebar-link.active { color: #fff; padding-left: 10px; }
        .sidebar-link.active::before {
            content: '';
            position: absolute; left: 0; top: 50%; transform: translateY(-50%);
            width: 4px; height: 4px; background: #4dff88; border-radius: 50%;
        }

        /* Profile Card & Form */
        .profile-card { 
            background: #121212; 
            border: 1px solid rgba(255,255,255,0.1); 
            padding: 40px; 
            max-width: 800px; 
            position: relative; 
        }
        
        .profile-header { 
            display: flex; 
            align-items: center; 
            gap: 30px; 
            margin-bottom: 40px; 
            padding-bottom: 40px; 
            border-bottom: 1px solid rgba(255,255,255,0.1); 
        }
        
        /* Image Upload Styling */
        .profile-img-container { 
            width: 120px; 
            height: 120px; 
            border-radius: 50%; 
            overflow: hidden; 
            border: 2px solid #4dff88; 
            position: relative; 
            cursor: pointer;
            box-shadow: 0 0 15px rgba(77, 255, 136, 0.2);
        }
        .profile-img { width: 100%; height: 100%; object-fit: cover; }
        .profile-img-overlay {
            position: absolute; top: 0; left: 0; width: 100%; height: 100%;
            background: rgba(0,0,0,0.7); display: flex; justify-content: center; align-items: center;
            opacity: 0; transition: 0.3s; color: #4dff88; font-family: 'Oswald'; 
            text-transform: uppercase; font-size: 12px; letter-spacing: 1px;
            text-align: center;
        }
        .profile-img-container:hover .profile-img-overlay { opacity: 1; }

        /* Form Fields */
        .form-group { margin-bottom: 25px; }
        .form-label { 
            display: block; 
            color: #888; 
            margin-bottom: 10px; 
            font-family: 'Oswald'; 
            text-transform: uppercase; 
            font-size: 12px; 
            letter-spacing: 1px; 
        }
        .form-input { 
            width: 100%; 
            box-sizing: border-box;
            padding: 15px; 
            background: #0e0e0e; 
            border: 1px solid rgba(255,255,255,0.1); 
            color: white; 
            font-family: 'Montserrat'; 
            font-size: 14px; 
            transition: 0.3s;
            border-radius: 2px;
        }
        .form-input:focus { border-color: #4dff88; outline: none; box-shadow: 0 0 10px rgba(77,255,136,0.1); }
        .form-input:disabled { opacity: 0.5; cursor: not-allowed; border-color: transparent; background: #151515; color: #666; }
        
        /* Buttons */
        .save-btn { 
            background: #fff; 
            color: black; 
            padding: 15px 40px; 
            border: none; 
            font-family: 'Oswald'; 
            text-transform: uppercase; 
            font-weight: bold; 
            cursor: pointer; 
            margin-top: 10px; 
            letter-spacing: 1px; 
            transition: 0.3s;
            border-radius: 2px;
            display: inline-block;
        }
        .save-btn:hover { background: #4dff88; box-shadow: 0 0 20px rgba(77, 255, 136, 0.4); }

        /* Footer */
        .footer { padding: 50px 40px; border-top: 1px solid rgba(255,255,255,0.1); margin-top: 60px; }
        .footer-text { color: #666; font-size: 12px; text-transform: uppercase; font-family: 'Montserrat'; }

        @media (max-width: 991px) {
            .dashboard-nav { padding: 0 20px; height: 70px; }
            .nav-center { display: none; }
            .dashboard-container { grid-template-columns: 1fr; gap: 40px; }
            .sidebar-menu { border-right: none; border-bottom: 1px solid rgba(255,255,255,0.1); padding-bottom: 30px; margin-bottom: 30px; padding-right: 0; }
        }
    </style>
</head>

<body class="body">

    <nav class="dashboard-nav">
        <div class="nav-left">
            <a href="/" class="w-inline-block" style="text-decoration: none;">
                <div class="nav-logo-text">Stock Master</div>
            </a>
        </div>

        <div class="nav-center">
            <a href="/home" class="nav-pill">
                <span class="letter-wrap">Dashboard</span>
            </a>
            <a href="/products" class="nav-pill">
                <span class="letter-wrap">Products</span>
            </a>
            <a href="/operations" class="nav-pill">
                <span class="letter-wrap">Operations</span>
            </a>
            <a href="/warehouses/map" class="nav-pill">
                <span class="letter-wrap">Map</span>
            </a>
        </div>

        <div class="nav-right">
            <div class="user-status">
                <div class="status-dot"></div>
                <span>Live</span>
            </div>
            <a href="/users/logout" class="logout-btn">
                Logout
                <img src="https://cdn.prod.website-files.com/67a323a1c68594827fa0cca9/67a323a1c68594827fa0ccb4_Vector.svg" width="12" alt="" style="filter: invert(1);">
            </a>
        </div>
    </nav>

    <section class="dashboard-section">
        <div class="dashboard-container">
            
            <aside class="sidebar-menu">
                <a href="/home" class="sidebar-link" style="font-size: 12px; margin-bottom: 20px; color: #666;">← Back to Dashboard</a>
                
                <div class="sidebar-header">Account Settings</div>
                
                <a href="/profile" class="sidebar-link <%= typeof activeTab !== 'undefined' && activeTab === 'personal' ? 'active' : '' %>">Personal Details</a>
                <a href="/profile/security" class="sidebar-link <%= typeof activeTab !== 'undefined' && activeTab === 'security' ? 'active' : '' %>">Security</a>
                <a href="/profile/notifications" class="sidebar-link <%= typeof activeTab !== 'undefined' && activeTab === 'notifications' ? 'active' : '' %>">Notifications</a>
            </aside>

            <div class="main-content">
                
                <% if (success && success.length > 0) { %>
                    <div style="background: rgba(77, 255, 136, 0.1); color: #4dff88; padding: 15px; border: 1px solid #4dff88; margin-bottom: 20px; font-family: 'Oswald'; letter-spacing: 1px; border-radius: 2px;">
                        <%= success %>
                    </div>
                <% } %>
                <% if (error && error.length > 0) { %>
                    <div style="background: rgba(255, 77, 77, 0.1); color: #ff4d4d; padding: 15px; border: 1px solid #ff4d4d; margin-bottom: 20px; font-family: 'Oswald'; letter-spacing: 1px; border-radius: 2px;">
                        <%= error %>
                    </div>
                <% } %>

                <div style="margin-bottom: 30px;">
                    <h2 style="font-family: 'Oswald'; font-size: 40px; margin: 0; text-transform: uppercase;">My Profile</h2>
                    <p style="font-family: 'Montserrat'; color: #888; margin-top: 5px; font-size: 14px;">Manage your personal information and account settings.</p>
                </div>

                <form action="/profile/update" method="POST" enctype="multipart/form-data" class="profile-card">
                    
                    <div class="profile-header">
                        <div class="profile-img-container" onclick="document.getElementById('imageUpload').click()">
                            <% if(user.image) { %>
                                <img src="data:image/jpeg;base64,<%= user.image %>" class="profile-img" id="imgPreview">
                            <% } else { %>
                                <img src="https://cdn.prod.website-files.com/67a323a1c68594827fa0cca9/67a61ab834076730d938dff5_Group%202147255216.svg" class="profile-img" id="imgPreview" style="padding: 35px; background: #222; opacity: 0.5;">
                            <% } %>
                            <div class="profile-img-overlay">
                                <span>Upload<br>Photo</span>
                            </div>
                        </div>
                        <div>
                            <h3 style="font-family: 'Oswald'; font-size: 24px; margin: 0; text-transform: uppercase; color: #fff;"><%= user.fullname %></h3>
                            <div style="font-family: 'Montserrat'; color: #888; font-size: 14px; margin-top: 5px;"><%= user.email %></div>
                            <div style="font-family: 'Montserrat'; color: #4dff88; font-size: 10px; margin-top: 10px; text-transform: uppercase; letter-spacing: 1px; border: 1px solid #4dff88; display: inline-block; padding: 4px 10px; border-radius: 20px; font-weight: 600;">Admin Access</div>
                        </div>
                        <input type="file" name="image" id="imageUpload" style="display: none;" onchange="previewImage(this)">
                    </div>

                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                        <div class="form-group">
                            <label class="form-label">Full Name</label>
                            <input type="text" name="fullname" class="form-input" value="<%= user.fullname %>">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Contact Number</label>
                            <input type="number" name="contact" class="form-input" value="<%= user.contact || '' %>" placeholder="+91 0000000000">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Email Address</label>
                        <input type="email" class="form-input" value="<%= user.email %>" disabled>
                        <div style="font-size: 11px; color: #555; margin-top: 8px; font-family: 'Montserrat'; font-style: italic;">To change your email address, please contact system support.</div>
                    </div>

                    <button type="submit" class="save-btn">Save Changes</button>

                </form>

            </div>
        </div>
    </section>

    <section class="footer">
        <div class="footer-text">StockMaster IMS v1.0 © 2025</div>
    </section>

    <script>
        // Text Animation Logic (from Dashboard)
        const letterWrapClass = 'letter-wrap';
        const letterWrapElements = document.getElementsByClassName(letterWrapClass);
        
        [...letterWrapElements].forEach(el => {
            letterWrap(el, letterWrapClass);
        });

        function letterWrap(el, cls) {
            const words = el.textContent.split(' ');
            const letters = [];
            cls = cls || 'letter-wrap'
            words.forEach(word => {
                let html = '';
                for (var letter in word) {
                    html += `<span class="${cls}__char"><span class="${cls}__char-inner" data-letter="${word[letter]}">${word[letter]}</span></span>`;
                };
                let wrappedWords = `<span class="${cls}__word">${html}</span>`;
                letters.push(wrappedWords);
            });
            return el.innerHTML = letters.join(' ');
        }

        // Smooth Scroll
        if (window.innerWidth > 780) {
            const lenis = new Lenis({ lerp: 0.1, smooth: true });
            function raf(time) { lenis.raf(time); requestAnimationFrame(raf); }
            requestAnimationFrame(raf);
        }

        // Image Preview Logic
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    const img = document.getElementById('imgPreview');
                    img.src = e.target.result;
                    img.style.padding = '0'; // Remove padding if it was placeholder
                    img.style.background = 'transparent';
                    img.style.opacity = '1';
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
</body>
</html>